<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="#cce5ff" />

            <stroke android:width="1dp" android:color="#0084ff" />

            <!-- Corner radius bugged for Android API 11 and below -->
            <corners android:topLeftRadius="20dp" />

        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:endColor="#0084ff" android:startColor="#cce5ff" />

            <stroke android:width="1dp" android:color="#0084ff" />

            <!-- Corner radius bugged for Android API 11 and below -->
            <corners android:topLeftRadius="20dp" />

        </shape></item>

</selector>